<Window x:Class="FinManagment.AddMoney"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinManagment"
        mc:Ignorable="d"
        Title="AddMoney" Height="150" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition>
            </RowDefinition>
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" Content="Введите ваш доход,программа сама вычтет налог:"></Label>
        <TextBox x:Name="textMoney" Grid.Row="1" Background="Gray" Cursor="Arrow"></TextBox>
        <Button x:Name="BtnAdd" Content="ОК" Grid.Row="1" Width="40" Height="20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="GhostWhite" Click="BtnAdd_Click"></Button>
    </Grid>
</Window>
